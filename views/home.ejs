<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= homeContent%></p>

<% postItems.forEach(function(post){ %>
   
   <% function truncateString(str, num) { %>
       <% if (str.length > num) { %>
         <% return str.slice(0, num) + "..."; %>
       <% } else { %>
        <%  return str; %>
       <% } %>
      <% } %>
  <% const postLength= truncateString(post.postBody,100) %>
     <h2><%= post.postTitle %></h2>
      <p><%= postLength %> <span> <a href="/post/<%=post.postTitle%>">Read more</a></span></p> 
 <% }) %>
<%- include("partials/footer"); -%>

